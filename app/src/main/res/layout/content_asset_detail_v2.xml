<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Theme.AppCompat.Light">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:contentDescription="TODO"
        android:paddingTop="15dp"
        app:srcCompat="@drawable/kalbe_nutritionals_logo" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="vertical"
            android:padding="25dp">

            <ImageView
                android:id="@+id/asset_image"
                android:layout_width="166dp"
                android:layout_height="166dp"
                android:layout_gravity="center"
                android:contentDescription="TODO"
                android:paddingTop="15dp"
                app:srcCompat="@drawable/kalbe_nutritionals_logo" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/nav_header_vertical_spacing"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="@string/hint_fixed_asset_code">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInput_txtFixedAssetCode"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:focusable="false"
                    android:inputType="textShortMessage|textCapCharacters" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/nav_header_vertical_spacing"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="@string/hint_nama_asset">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInput_txtNamaAsset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:gravity="top|left"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:maxLength="1000"
                    android:maxLines="5"
                    android:minLines="1"
                    android:scrollbars="vertical"
                    android:singleLine="false"
                    tools:ignore="RtlHardcoded" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/nav_header_vertical_spacing"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="@string/hint_asset_category">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInput_assetCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:gravity="top|left"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:maxLength="1000"
                    android:maxLines="5"
                    android:minLines="1"
                    android:scrollbars="vertical"
                    android:singleLine="false"
                    tools:ignore="RtlHardcoded" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/nav_header_vertical_spacing"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="@string/hint_asset_supervisorid">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInput_assetSupervisorID"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:focusable="false"
                    android:inputType="textShortMessage" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/nav_header_vertical_spacing"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="@string/hint_asset_acquisition">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInput_assetAcquisition"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:focusable="false"
                    android:inputType="textShortMessage" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/nav_header_vertical_spacing"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="@string/hint_asset_pic_name">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInput_assetPicName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:gravity="top|left"
                    android:inputType="textMultiLine|textShortMessage"
                    android:lines="3"
                    android:maxLength="1000"
                    android:maxLines="5"
                    android:minLines="1"
                    android:scrollbars="vertical"
                    android:singleLine="false"
                    tools:ignore="RtlHardcoded" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/nav_header_vertical_spacing"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="@string/hint_nama_pengguna">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInput_assetPicNick"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:focusable="false"
                    android:inputType="textCapWords|textShortMessage"
                    android:maxLength="3" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/nav_header_vertical_spacing"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="@string/hint_asset_pic_email">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInput_assetPicEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:gravity="top|left"
                    android:inputType="textMultiLine|textEmailAddress"
                    android:lines="3"
                    android:maxLength="1000"
                    android:maxLines="5"
                    android:minLines="1"
                    android:scrollbars="vertical"
                    android:singleLine="false"
                    tools:ignore="RtlHardcoded" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/nav_header_vertical_spacing"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="@string/hint_asset_pic_user">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInput_assetUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:gravity="top|left"
                    android:inputType="textMultiLine|textShortMessage"
                    android:lines="3"
                    android:maxLength="1000"
                    android:maxLines="5"
                    android:minLines="1"
                    android:scrollbars="vertical"
                    android:singleLine="false"
                    tools:ignore="RtlHardcoded" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/nav_header_vertical_spacing"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="@string/hint_asset_location_by_system">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInput_txtLokasiAssetBySystem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:focusable="false"
                    android:gravity="top|left"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:maxLength="1000"
                    android:maxLines="5"
                    android:minLines="1"
                    android:scrollbars="vertical"
                    android:singleLine="false"
                    tools:ignore="RtlHardcoded" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/nav_header_vertical_spacing"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="@string/hint_asset_lob">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInput_assetLOB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:focusable="false"
                    android:gravity="top|left"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:maxLength="1000"
                    android:maxLines="5"
                    android:minLines="1"
                    android:scrollbars="vertical"
                    android:singleLine="false"
                    tools:ignore="RtlHardcoded" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/nav_header_vertical_spacing"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="@string/hint_asset_area">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInput_txtAssetArea"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:focusable="false"
                    android:inputType="textShortMessage" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/nav_header_vertical_spacing"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="@string/hint_rfid">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInput_txtRfid"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:focusable="false"
                    android:inputType="textShortMessage" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/nav_header_vertical_spacing"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="@string/hint_asset_status">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInput_txtStatus"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:focusable="false"
                    android:inputType="textShortMessage" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/nav_header_vertical_spacing"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="@string/hint_asset_img">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInput_assetImageLink"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:focusable="false"
                    android:inputType="textShortMessage" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/nav_header_vertical_spacing"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="@string/hint_notes">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInput_assetNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top|left"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:maxLength="1000"
                    android:maxLines="5"
                    android:minLines="1"
                    android:scrollbars="vertical"
                    android:singleLine="false"
                    tools:ignore="RtlHardcoded" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/textInput_timestamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/nav_header_vertical_spacing"
                android:text="@string/last_scan_time" />

        </LinearLayout>

    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/ams_name"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:contentDescription="TODO"
        android:padding="5dp"
        app:srcCompat="@drawable/ic_vbn_logo_with_tag_line" />
</LinearLayout>
