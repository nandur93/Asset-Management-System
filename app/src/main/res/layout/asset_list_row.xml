<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:paddingLeft="@dimen/activity_margin"
    android:paddingTop="@dimen/dimen_10"
    android:paddingRight="@dimen/activity_margin"
    android:paddingBottom="@dimen/dimen_10"
    tools:ignore="UnusedAttribute"
    tools:targetApi="m">

    <TextView
        android:id="@+id/assetId"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dot_height"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_marginEnd="@dimen/dot_margin_right"
        android:includeFontPadding="false"
        android:lineSpacingExtra="0dp"
        android:textSize="@dimen/timestamp" />

    <TextView
        android:id="@+id/timestamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/assetId"
        android:textSize="@dimen/timestamp" />

    <TextView
        android:id="@+id/assetCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/timestamp"
        android:layout_toEndOf="@id/assetId"
        android:textSize="@dimen/note_list_text" />

    <TextView
        android:id="@+id/assetRfid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/assetCode"
        android:layout_toEndOf="@id/assetId"
        android:textColor="#FF0000"
        android:textSize="@dimen/note_list_text" />

    <TextView
        android:id="@+id/assetDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/assetRfid"
        android:layout_toEndOf="@id/assetId"
        android:textSize="@dimen/note_list_text" />

    <TextView
        android:id="@+id/assetPic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/assetDesc"
        android:layout_toEndOf="@id/assetId"
        android:textSize="@dimen/note_list_text" />

    <TextView
        android:id="@+id/assetLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/assetPic"
        android:layout_toEndOf="@id/assetId"
        android:text="@string/app_name"
        android:textSize="@dimen/note_list_text" />

    <TextView
        android:id="@+id/assetStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/assetLocation"
        android:layout_toEndOf="@id/assetId"
        android:text="@string/app_name"
        android:textColor="#4CAF50"
        android:textSize="@dimen/note_list_text"
        android:textStyle="bold" />

</RelativeLayout>
